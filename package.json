{
  "name": "personal-website",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:html build:css",
    "build:html": "NODE_ENV=production eleventy",
    "build:html:watch": "NODE_ENV=development eleventy --serve",
    "build:css": "NODE_ENV=production postcss src/style.css -o build/dist/style.css",
    "build:css:watch": "NODE_ENV=development postcss src/style.css -o build/dist/style.css --watch",
    "serve": "npm-run-all --parallel build:css:watch build:html:watch",
    "format": "prettier --write \"**/*.{md,html,json,yml,js}\""
  },
  "author": "Chad McElligott <chad.mcelligott@gmail.com>",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@tailwindcss/jit": "^0.1.17",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.5",
    "date-fns": "^2.19.0",
    "eleventy-plugin-error-overlay": "^0.1.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.yml": [
      "prettier --write"
    ]
  }
}
