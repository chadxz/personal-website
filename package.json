{
  "name": "personal-website",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:html build:css",
    "build:html": "NODE_ENV=production eleventy --port=8080",
    "build:html:watch": "NODE_ENV=development eleventy --serve",
    "build:css": "NODE_ENV=production tailwindcss -i src/style.css -o build/dist/style.css --minify",
    "build:css:watch": "NODE_ENV=development tailwindcss -i src/style.css -o build/dist/style.css --watch",
    "tunnel": "untun tunnel http://localhost:8080 --acceptCloudflareNotice=true",
    "start": "npm-run-all --parallel build:css:watch build:html:watch tunnel",
    "format": "prettier --write \"**/*.{md,html,json,yml,js}\"",
    "prepare": "husky",
    "clean": "rimraf build",
    "sharing-images": "node scripts/generate-sharing-images.mjs",
    "update-deps": "npm-check -u"
  },
  "author": "Chad McElligott <chad@chadxz.dev>",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/typography": "^0.5.16",
    "date-fns": "^4.1.0",
    "eleventy-plugin-reading-time": "0.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "npm-check": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prism-themes": "^1.7.0",
    "puppeteer": "^24.28.0",
    "rimraf": "^6.1.0",
    "tailwindcss": "^4.1.16",
    "untun": "^0.1.3"
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.yml": [
      "prettier --write"
    ]
  }
}
