{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(meta.url) }}{%- endset -%}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>{% if title %}{{ title }} ~ chadxz.dev{% else %}chadxz.dev{% endif %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index,follow,noodp" />
    <meta name="googlebot" content="index,follow" />
    <meta name="author" content="{{ meta.author.name }}" />
    <meta name="description" content="{% if description %}{{ description }}. {% endif %}{% if title %}A post by {% endif %}{{ meta.author.name }}" />
    <meta property="og:title" content="{% if title %}{{ title }} ~ chadxz.dev{% else %}chadxz.dev{% endif %}" />
    <meta property="og:description" content="{% if description %}{{ description }}{% else %}{% if title %}A post by {% endif %}{{ meta.author.name }}{% endif %}" />
    <meta property="og:image" content="{% getSharingImage page %}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ absolutePageUrl }}" />
    <meta property="og:site_name" content="{{ meta.title }}" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:label1" content="Est. reading time" />
    <meta name="twitter:data1" content="{{ content | readingTime({ speed: settings.wpm }) }}" />
    <link rel="alternate" type="application/atom+xml" title="{{ meta.title }}" href="/feed.xml" />
    <link rel="stylesheet" href="/style.css?v={% version %}" type="text/css" media="all" />
    <link rel="me" href="mailto:chad@chadxz.dev" />
    <link rel="me" href="https://github.com/chadxz" />
    <link rel="me" href="https://hachyderm.io/@chadxz" />
    <link rel="shortcut icon" href="{{ '/favicon.ico' | absoluteUrl(meta.url) }}?v={% version %}" />
    <link rel="apple-touch-icon" href="{{ '/apple-touch-icon.png' | absoluteUrl(meta.url) }}?v={% version %}" />
    <link rel="author" href="/humans.txt" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="canonical" href="{{ absolutePageUrl }}" />
</head>

<body>
